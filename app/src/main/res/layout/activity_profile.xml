<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/lightbg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".profileActivity"

    >

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dustyrose"
        android:fontFamily="@font/montserrat_light"
        android:padding="16dp"
        android:text="Profile"
        android:textSize="18sp" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/defaultavatar"
        app:tint="@color/textRed">

    </ImageView>

    <TextView
        android:id="@+id/usernametxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_light"
        android:text="username"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Email:"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/textRed"
        >

    </TextView>
    <TextView
        android:id="@+id/emailtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/lightbg"
        android:background="@color/textRed"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_light"
        android:text="email"
        android:textSize="20sp"
       >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Contact Number:"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/textRed"
        >

    </TextView>
    <TextView
        android:id="@+id/contacttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/lightbg"
        android:background="@color/textRed"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_light"
        android:text="contact"
        android:textSize="20sp"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Blood Type:"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/textRed"
        >

    </TextView>
    <TextView
        android:id="@+id/bloodtypetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lightbg"
        android:background="@color/textRed"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_light"
        android:text="bloodtype"
        android:textSize="20sp"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Medical Disease:"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/textRed"
        >

    </TextView>
    <TextView
        android:id="@+id/mdtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lightbg"
        android:background="@color/textRed"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_light"
        android:text="medical diseases"
        android:textSize="20sp"
        >

    </TextView>



</LinearLayout>