<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbg"
    tools:context=".homepage">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <!-- Content inside the ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/usernameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dustyrose"
                android:fontFamily="@font/montserrat_light"
                android:padding="16dp"
                android:text="username"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/logo2"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                >


            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Choose blood type to find donors : "
                    android:textColor="@color/textRed"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="25px"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp">

                </TextView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/typeAplusbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/lightred2"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingTop="5dp"
                    android:text="Type : A+ "
                    android:textAlignment="viewStart"

                    android:paddingBottom="10dp"
                    android:textColor="@color/lightbg"
                    android:textSize="20dp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/typeAminusbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/lightred2"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingTop="5dp"
                    android:text="Type : A- "
                    android:textAlignment="viewStart"
                    android:textColor="@color/lightbg"

                    android:paddingBottom="10dp"
                    android:textSize="20dp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/typeBplusbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/lightred2"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingTop="5dp"
                    android:text="Type : B+ "
                    android:textAlignment="viewStart"
                    android:textColor="@color/lightbg"
                    android:textSize="20dp"
                    app:cornerRadius="20dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/typeBminusbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/lightred2"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:text="Type : B- "
                    android:textAlignment="viewStart"
                    android:textColor="@color/lightbg"
                    android:textSize="20dp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/typeOplusbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/lightred2"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingTop="5dp"
                    android:text="Type : O+ "
                    android:paddingBottom="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/lightbg"
                    android:textSize="20dp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/typeOminusbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/lightred2"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingTop="5dp"
                    android:text="Type : O- "
                    android:textAlignment="viewStart"
                    android:textColor="@color/lightbg"
                    android:paddingBottom="10dp"
                    android:textSize="20dp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/typeABplusbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/lightred2"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingTop="5dp"
                    android:text="Type : AB+ "
                    android:textAlignment="viewStart"
                    android:textColor="@color/lightbg"
                    android:paddingBottom="10dp"
                    android:textSize="20dp"
                    app:cornerRadius="20dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/typeABminusbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/lightred2"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingTop="5dp"
                    android:text="Type : AB- "
                    android:textAlignment="viewStart"
                    android:textColor="@color/lightbg"
                    android:paddingBottom="10dp"
                    android:textSize="20dp"
                    app:cornerRadius="20dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom navigation bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/lightred"
        android:padding="5px"

      >

        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:backgroundTint="@color/lightred"
            android:src="@drawable/accounticon"
            app:tint="@color/lightbg">

        </ImageButton>

        <ImageButton
            android:id="@+id/chatbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:backgroundTint="@color/lightred"
            android:src="@drawable/chaticon_large"
            app:tint="@color/lightbg">

        </ImageButton>

        <ImageButton
            android:id="@+id/mapbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:backgroundTint="@color/lightred"
            android:src="@drawable/locationicon"
            app:tint="@color/lightbg">

        </ImageButton>

    </LinearLayout>

</RelativeLayout>